<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%=title %>
  </title>
  <link href="https://cdn.bootcdn.net/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.css" rel="stylesheet" />
  <style>
    label {
      font-weight: normal;
    }

    .panel-body .glyphicon-pencil {
      display: none;
    }

    .panel-body:hover .glyphicon-pencil {
      display: inline-block;
      margin-right: 10px;
    }

    .panel-body .glyphicon-remove {
      display: none;
    }

    .panel-body:hover .glyphicon-remove {
      display: inline-block;
      margin-left: 10px;
    }

    .record-button {
      background-color: #008CBA;
      color: white;
      border: none;
      cursor: pointer;
      padding-right: 5px;
      margin-left: 70%;

    }

    .logout-button {
      background-color: #008CBA;
      color: white;
      border: none;
      cursor: pointer;
      padding-left: 5px;
      margin-right: 2%;

    }
  </style>
</head>

<body>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-lg-8 col-lg-offset-2">
        <h2>
          <%=title %>
        </h2>
        <a href="/account/create">
          <span class="record-button">
            点击记账
          </span>
        </a>
        <a href="/users/logout">
          <span class="logout-button">
            退出登录
          </span>
        </a>
        <hr />
        <div class="accounts">
          <% accounts.forEach(it=> { %>
            <div class="panel panel-<%=it.type === 0 ? 'danger' : 'success'%>">
              <div class="panel-heading">
                <%=it.date %>
              </div>
              <div class="panel-body">
                <div class="col-xs-6">
                  <%=it.item %>
                </div>
                <div class="col-xs-2 text-center">
                  <span class="label label-<%=it.type === 0 ? 'warning' :'success'%>">
                    <%=it.type===0 ? '支出' : '收入' %>
                  </span>
                </div>
                <div class="col-xs-2 text-right">
                  <%=it.amount %> 元
                </div>
                <div class="col-xs-2 text-right">
                  <a href="/account/modify/<%=it.id %>">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                  </a>
                  <a href="/account/delete?id=<%=it.id %>">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                  </a>
                </div>
              </div>
            </div>
            <% }) %>

        </div>
      </div>
    </div>
  </div>
</body>

</html>